FROM ghcr.io/costaalso2/webdav:main

# Forzamos a que acepte los m√©todos de WebDAV en todo el servidor
RUN echo "<Directory />\n\
    Dav On\n\
    Options Indexes FollowSymLinks\n\
    AllowOverride None\n\
    Require all granted\n\
</Directory>" > /etc/apache2/conf-available/webdav-fix.conf

RUN a2enconf webdav-fix
