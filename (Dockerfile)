FROM gher.io/costaalso2/webdav: main

# Configuramos para que Apache no se confunda con el HTTPS de

Render



RUN echo "RequestHeader set X-Forwarded-Proto 'https'"



/etc/apache2/apache2.conf



RUN sed -i 's/Alias /webdav /var/lib/dav/data | Alias

//var/lib/dav/data'





/etc/apache2/conf-enabled/webdav.conf





#Permisos totales





RUN chmod -R 777/var/lib/dav/data



EXPOSE 6065
