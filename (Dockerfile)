FROM ghcr.io/costaalso2/webdav:main

# Forzamos a que el servidor use la ra√≠z "/" en lugar de "/webdav"
RUN sed -i 's|Alias /webdav|Alias /|g' /etc/apache2/conf-enabled/webdav.conf

# Aseguramos que los permisos sean totales para evitar errores 403
RUN mkdir -p /var/lib/dav/data && chown -R www-data:www-data /var/lib/dav/data && chmod -R 777 /var/lib/dav/data

# Usamos el puerto que ya configuramos en Render
EXPOSE 6065
